    <title>Streaming</title>
<style type="text/css">

body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #111;
    color: #fff;
}

.container {
    max-width: 800px;
    padding: 0 20px;
}

a {
    color: #fff;
    text-decoration: none;
}

a:hover {
    color: #ff00ff;
}

/* Header styles */
header {
    background-color: #000;
    padding: 20px;
    text-align: center;
}

header h1 {
    margin: 0;
    font-size: 36px;
}

.button {
    display: inline-block;
    background-color: #ff00ff;
    color: #fff;
    padding: 10px 20px;
    text-decoration: none;
    border-radius: 5px;
    margin-bottom: 20px;
    transition: background-color 0.3s ease;
}

.button:hover {
    background-color: #ff66ff;
}
/* New CSS for Streaming Page */
.playlist {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
  margin-bottom: 20px;
  justify-content: flex-start;
}


.video-entry {
    width: calc(60% - 10px);
    display: flex;
    align-items: center;
    background-color: #333;
    padding: 10px;
    border-radius: 5px;
}

.video-entry img {
    width: 200px;
    height: auto;
    margin-right: 10px;
}

.video-entry .video-info {
    flex-grow: 1;
}

.video-entry h3,
.video-entry p {
    margin: 0;
    color: #fff;
}

.video-entry button {
    background-color: #ff00ff;
    color: #fff;
    padding: 5px 10px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.video-entry button:hover {
    background-color: #ff66ff;
}

.video-player {
    position: absolute;
    top: 200px;
    left: 600px;
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
}

/* Streaming page specific styles */
video {
    width: 100%;
    max-width: 800px;
    display: block;
    margin: 0 auto;
    border-radius: 10px;
    box-shadow: 0 0 20px #ff00ff;
}

/* Download page specific styles */
ul {
    list-style-type: none;
    padding: 0;
}

ul li {
    margin-bottom: 10px;
}

ul li a {
    display: inline-block;
    padding: 10px 20px;
    border-radius: 5px;
    background-color: #ff00ff;
    transition: background-color 0.3s ease;
}

ul li a:hover {
    background-color: #ff66ff;
}

