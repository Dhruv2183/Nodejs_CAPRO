{
    "info": {
      "name": "YouTube API Tests",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
      {
        "name": "Get Video Details",
        "request": {
          "method": "GET",
          "header": [],
          "url": {
            "raw": "https://www.googleapis.com/youtube/v3/videos?id=VIDEO_ID&key=API_KEY&part=snippet,statistics",
            "host": ["www.googleapis.com"],
            "path": ["youtube", "v3", "videos"]
          }
        },
        "response": [
          {
            "name": "Valid Video",
            "originalRequest": {
              "method": "GET",
              "header": [],
              "url": {
                "raw": "https://www.googleapis.com/youtube/v3/videos?id=dQw4w9WgXcQ&key=API_KEY&part=snippet,statistics",
                "host": ["www.googleapis.com"],
                "path": ["youtube", "v3", "videos"]
              }
            },
            "code": 200,
            "status": "OK",
            "body": "{\n  \"items\": [\n    {\n      \"snippet\": {\n        \"title\": \"Sample Video\",\n        \"description\": \"Test description\"\n      },\n      \"statistics\": {\n        \"viewCount\": \"1000\"\n      }\n    }\n  ]\n}"
          }
        ]
      }
    ],
    "event": [
      {
        "listen": "test",
        "script": {
          "exec": [
            "pm.test(\"Status code is 200\", function() {",
            "    pm.response.to.have.status(200);",
            "});",
            "",
            "pm.test(\"Response has video details\", function() {",
            "    var jsonData = pm.response.json();",
            "    pm.expect(jsonData.items[0].snippet.title).to.be.a('string');",
            "    pm.expect(jsonData.items[0].statistics.viewCount).to.be.a('string');",
            "});"
          ],
          "type": "text/javascript"
        }
      }
    ]
  }